#base
import turtle
import time

x = 0
y = 0

def Move (movement, lenght):

#direction
    if movement == "right":
        ranMov = 1
        if movement == "down":
            ranMov = 2
            if movement == "left":
                ranMov = 3
                if movement == "up":
                    ranMov = 4
#lenght of the move
    if lenght > 0:
        lenght = lenght %500
    else:
        lenght = 1 - 1

    return ranMov, lenght

#turtle setup
turtle.screensize(canvwidth=900, canvheight=900, bg="white")
turtle.color("black")
turtle.pendown
turtle.shapesize(2)
time.sleep(1)

#Movement code
while True :
    x = input("Direction ")
    y = int(input("Lenght "))
    Move(x, y)
#Direction decision
    if x == 1:
        turtle.right(0)
        if x == 2:
            turtle.down(270)
            if x == 3:
                turtle.left(180)
                if x == 4:
                    turtle.up(90)
#Movement specify
    turtle.forward(y)
